<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
 <html>
 	<head>
 		<title>The HandBag eShop</title>
 		<%= stylesheet_link_tag 'depot' , :media => "all" %>
		<%= javascript_include_tag :defaults %>
 	</head>
 	<body id="store">
 		<div id="header">
 		<%= @page_title || "The HandBag eShop" %>
 		</div>
 		
		<div id="content">
 			<div id="menu1">
				
				<ul id="menu2">				
				<li id="m-home" class="active"><a href="/..">Home</a></li><br />
				<!-- is "active" because where are here -->
				<li id="m-checkout"><a href="checkout">Checkout</a></li><br />
				<li id="m-contact"><a href="contact">Contact</a></li><br /> 
				</ul>				
			
				<%if @cart%>
					<% hidden_div_if(@cart.items.empty?, :id => "cart" ) do %>
						<%= render(:partial => "cart" , :object => @cart) %>
					<% end %>
				<% end %>
				

				<% if session[:user_id] %>
					<br />
					<%= link_to 'Orders', :controller => 'orders' %><br />
					<%= link_to 'Products', :controller => 'products' %><br />
					<%= link_to 'Users', :controller => 'users' %><br />
					<br />
					<%= link_to 'Logout', :controller => :admin, :action => 'logout' %>
				<% end %>
				
				 
			</div>
			 
			<div id="main">
				<% if flash[:notice] -%>
					<div id="notice"><%= flash[:notice] %></div>
				<% end -%>
				
				<%= yield :layout %>
			</div>
		</div>
 	</body>
</html>