<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd" >
 <html>
 	<head>
 		<title>Na oku</title>
 		<%= stylesheet_link_tag 'depot' , :media => "all" %>
		<%= javascript_include_tag :defaults %>
 	</head>
 	<body id="store">
 		<div id="header">
 		<%= @page_title || "Na oku" %>
 		</div>
 		
		<div id="content">
			
 			<div id="menu1">
 				<%= link_to image_tag("/images/images_style/sale.png"), {:controller => 'store', :action => "index" } %>
	
				<ul id="menu2">	
				
				<li id="m-home"><%= link_to 'Store', :controller => 'store' %><br />
				<li id="m-contact"><%= link_to 'Contact', :controller => 'contact' %><br />  
				</ul>				
			
				<%if @cart%>
					<% hidden_div_if(@cart.items.empty?, :id => "cart" ) do %>
						<%= render(:partial => "cart" , :object => @cart) %>
					<% end %>
				<% end %>
				
				<ul id="menu3">
				<% if session[:user_id] %>
				
					<p>Admin Panel</p>
					<li id="m-orders"><%= link_to 'orders', :controller => 'orders' %></li><br />
					<li id="m-products"><%= link_to 'items', :controller => 'products' %></li><br />
					<li id="m-users"><%= link_to 'users', :controller => 'users' %></li><br />
					<li id="m-logout"><%= link_to 'logout', :controller => :admin, :action => 'logout' %></li>
				<% end %>
				</ul>				
				 
			</div>
			 
			<div id="main">
				<% if flash[:notice] -%>
					<div id="notice"><%= flash[:notice] %></div>
				<% end -%>
				
				<%= yield :layout %>
			</div>
				<div id="footer">
					<p> Created by kamelury </p>
				</div>
		</div>
		

		
 	</body>
</html>