<div id="show_orders">
<p>
  <b>Name:</b>
  <%=h @order.name %>
</p>

<p>
  <b>Address:</b>
  <%=h @order.address %>
</p>

<p>
  <b>Email:</b>
  <%=h @order.email %>
</p>

<p>
  <table id="t_orders">
  <b>Items wanted:</b>
     <tr>
      <th>Title</th>
     </tr>
	 <%
		@items.each do |item|
		@product=  Product.find(item.product_id) %>
     <tr>
		<td><%=h @product.title %></td>
	 </tr>
		<br />
   	<% end %>
  </table>
</p>

<%= link_to 'Back', orders_path %>
</div>